<%= render 'public/nav' %> 
<div class = "container">
        <div class="row title">
            <div class = "col-md-4 offset-1">
                <h4>配送先登録/一覧</h4>
            </div>
        </div>
        <%= form_with model: @new_address, url: end_users_mypage_addresses_path, local: true do |f|%>
            <div class = "row title">
                <div class = col-3>
                    <%= f.label "郵便番号(ハイフンなし)" %></br>
                   <div class = "space"><%= f.label "住所" %></br></div>
                    <div class = "space"><%= f.label "宛名" %></div>
                </div>
                <div class = col-4>
                    <%= f.text_field :postal_code, :placeholder => "0000000",:size =>"25x10"  %></br>
                    <div class = "space"><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0",:size =>"50x10"  %></br></div>
                    <div class = "space"><%= f.text_field :name, :placeholder => "令和道子",:size =>"25x10"  %></div>
                </div>
                <div class = col-2>
                    </br>
                    </br>
                    </br>
                    <%= f.submit "新規登録",class: 'btn btn-sm btn-success btn-sm btn-block '  %>
                </div>
            </div>
        <% end %>
        <div class = "row title">
            <table class ="table col-8">
                <thead class = "thead-light">
                    <tr>
                        <th scope = "col">郵便番号</th>
                        <th scope = "col">住所</th>
                        <th scope = "col">宛名</th>
                    </tr>
                </thead>
                <tbody>
                    <% @addresses.each do |address|%>
                        <tr>
                            <td style = "width:15%"><%= address.postal_code %></td>
                            <td style = "width:40%"><%= address.address %></td>
                            <td style = "width:15%"><%= address.name %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
</div>