<%= render 'public/nav'%> 

<div class = "container">
  <div class="row title">
    <h4>新規会員登録</h4>
  </div>

  <%= form_with model: @end_user, url: end_user_registration_path, id: 'new_end_user', class: 'new_end_user', local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    
    <div class = "row field">
      <div class = "col-3">
          <%= f.label "名前　　　　　　　　　(姓)" %>
      </div>
      <div class = "col-8">
          <%= f.text_field :last_name, autofocus: true %>
          <%= f.label "　　(名)　" %>
          <%= f.text_field :first_name, autofocus: true %>
      </div>
    </div>
    
    <div class = "row field">
      <div class = "col-3">
        <%= f.label "フリガナ　　　　　　(セイ)" %>
      </div>
      <div class = "col-8">
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= f.label "　　(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
    </div>
    
    <div class = "row field">
      <div class = "col-3">
        <%= f.label "メールアドレス　　　　　　　　　　" %>
      </div>
      <div class = "col-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    
    <div class = "row field">
      <div class = "col-3">
        <%= f.label "郵便番号(ハイフンなし)" %>
      </div>
      <div class = "col-8">
        <%= f.text_field :postal_code, autofocus: true%>
      </div>
    </div>
    
    <div class = "row field">
      <div class = "col-3">
        <%= f.label "住所" %>
      </div>
      <div class = "col-8">
        <%= f.text_field :address, autofocus: true %>
      </div>
    </div>
    
    <div class = "row field">
      <div class = "col-3">
        <%= f.label "電話番号(ハイフンなし)" %>
      </div>
      <div class = "col-8">
        <%= f.text_field :phone_number, autofocus: true %>
      </div>
    </div>
    
  <div class = "row field">
    <div class = "col-3">
      <%= f.label "パスワード(6文字以上)" %>
    </div>
    <div class = "col-8">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  
  <div class = "row field">
    <div class = "col-3">
      <%= f.label "パスワード(確認用)" %>
    </div>
    <div class = "col-8">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  
  <div class="btn-wrapper">
    <div class="row field">
      <div class = "col-3 offset-4">
        <%= f.submit "新規登録",class: 'btn btn-sm btn-success btn-sm btn-block w-100px ' %>
      </div>
    </div>
  </div>
    
  <% end %>
    

  <div class="row title">
    <h4>既に登録済みの方</h4>
  </div>
<p><%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。</p>

</div>
