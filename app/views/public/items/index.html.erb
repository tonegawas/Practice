<%= render 'public/nav'%> 

<div class = "container-fluid">
  <div class="row">
    <div class="col-1", style = "margin-left: 1%">
      <div class="row title">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ジャンル検索</th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr>
                  <td>
                    <%= link_to genre.name, items_path(genre_id: genre.id, genre_name: genre.name) %>
                  </td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
    <div class = "col-10", style = "margin-left: 5%">
      <div class="row title">
        <h4><%= @title %></h4> <p>　(全<%= @items.count%>件)</p>
      </div>
      <div class = "row "> 
        <% @items.each do |item| %>
          <div class = "col-2 space-col">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, size: "200x200", format: 'jpeg', fallback: "no_image.jpg" %> </br>
            <% end %>
            <p><%= item.name%></p>
            <p>¥<%= (item.price * 1.1).to_i %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
