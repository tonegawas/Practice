<%= render 'admin/nav'%> 
<div class = "container">
 <div class = "raw title">
  <h4>会員一覧</h4>
 </div>
 <div class ="raw">
     <table class = "table col-md-8 col-11 mx-auto">
      <thead class = "thead-light">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
       <% @users.each do |user|%>
        <tr>
          <td style="width:10%"><%= user.id %></td>
          <td style="width:15%"><%= user.last_name %> <%= user.first_name %></td>
          <td style="width:20%"><%= user.email %></td>
          <%  if user.is_unsubscribed == true%>
           <td class = "text-muted" style="width:10%">退会</td>
          <% else %>
           <td class = "text-success" style="width:10%">有効</td>
          <% end %>
        </tr>
       <% end %>
      </tbody>
     </table>
 </div>
</div>