<%= render 'admin/nav'%> 

<div class = "container">
  <div class="row title">
    <h4>管理者ログイン</h4>
  </div>
  
  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <div class="row  field">
      <div class = "col-2 offset-1">
        <%= f.label "メールアドレス　　  　" %>
      </div>
      <div class = "col-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row field">
      <div class = "col-2 offset-1">
        <%= f.label "パスワード" %>
      </div>
      <div class = "col-5">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
  
    <div class="row field">
      <div class = "col-2 offset-3">
        <%= f.submit "ログイン",class: 'btn btn-sm btn-primary btn-sm btn-block w-100px ' %>
      </div>
    </div>
  <% end %>
</div>
