<%= render 'admin/nav'%> 
<div class = "container">
 <div class = "raw title">
  <h4>ジャンル編集</h4>
 </div>
 
 
 <%= form_with model: @genre , url: admin_genres_update_path(@genre.id) , local: true do |f| %>
     <div class = "row field title">
      <div class = "col-md-2">
        <%= f.label "ジャンル名" %>
      </div>
      <div class = "col-2">
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class = "col-2 ">
          <%= f.submit "変更を保存",class: 'btn btn-sm btn-success btn-sm btn-block w-100px ' %>
      </div>
    </div>
 <% end %>
 
</div>