<%= render 'admin/nav' %> 
<div class = "container">
        <div class="row title">
            <div class = "col-md-4 offset-1">
                <h4>ジャンル一覧・追加</h4>
            </div>
        </div>
        <%= form_with model: @new_genre, url: admin_genres_path, local: true do |f|%>
            <div class = "row title">
                <div class = col-2>
                    <%= f.label "ジャンル名" %>
                </div>
                <div class = col-3>
                    <%= f.text_field :name, :placeholder => "ジャンル",:size =>"25x10"  %>
                </div>
                <div class = col-2>
                    <%= f.submit "新規登録",class: 'btn btn-sm btn-success btn-sm btn-block '  %>
                </div>
            </div>
        <% end %>
        <div class = "row title">
            <table class ="table col-4">
                <thead class = "thead-light">
                    <tr>
                        <th scope = "col">ジャンル</th>
                        <th scope = "col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @genres.each do |genre|%>
                        <tr>
                            <td style = "width:30%"><%= genre.name %></td>
                            <td style = "width:15%"><%= link_to  "編集する", admin_genres_edit_path(genre.id), class: 'btn btn-sm btn-success btn-sm btn-block' %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
</div>