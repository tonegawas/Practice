<%= render 'admin/nav'%> 
<div class = "container">
<% if @items.present? %>
  <div class = "row title">
   <div class = "col-md-6">
    <% if @search.present? %>
     <h4>商品検索結果(検索ワード：<%= @search %>)</h4>
    <% else %>
     <h4>商品一覧</h4>
    <% end %>
   </div>
   <div class = "col-md-2 offset-4">
    <%= link_to "商品登録" ,admin_items_new_path, class: 'btn btn-sm btn-success btn-sm btn-block' %>
   </div>
  </div>
 
  <div class ="row title">
      <table class = "table  col-12 mx-auto">
       <thead class = "thead-light">
         <tr>
           <th scope="col">商品ID</th>
           <th scope="col">商品名</th>
           <th scope="col">税抜価格</th>
           <th scope="col">ジャンル</th>
           <th scope="col">ステータス</th>
         </tr>
       </thead>
       <tbody>
        <% @items.each do |item|%>
         <tr>
           <td style="width:10%"><%= item.id %></td>
           <td style="width:20%"><%= item.name %></td>
           <td style="width:20%"><%= item.price %></td>
           <td style="width:20%"><%= item.genre.name %></td>
           <%  if item.is_active == false%>
            <td class = "text-muted" style="width:10%">販売停止中</td>
           <% else %>
            <td class = "text-success" style="width:10%">販売中</td>
           <% end %>
         </tr>
        <% end %>
       </tbody>
      </table>
  </div>
 <% else %>
  <div class = "row title">
   <div class = "col-8 mx-auto title">
    <h1 class = "title">”<%= @search %>”の検索結果はございませんでした。</h1>
   </div>
  </div>
  <div class = "row title">
   <div class = "col-3 mx-auto title">
    <%= link_to "戻る", admin_items_path, class: 'btn btn-sm btn-primary btn-sm btn-block'%>
   </div>
  </div>
 <% end %>
</div>